@using Denthis.Web.Models
@using Denthis.Core.Entities
@model ClienteModel
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"> Cliente</h5>
        </div>
        <div class="modal-body">
            <div class="row">
                <input id="idCliente" value="@Model.Cliente.Id" type="hidden" />
                <div class="col-md-12">
                    <label>Nombre:</label>
                    <input type="text" id="nombre" class="form-control" value="@Model.Cliente.Nombre" />
                </div>
                <div class="col-md-12">
                    <label>Telefono:</label>
                    <input type="text" id="telefono" class="form-control" value="@Model.Cliente.Telefono" />
                </div>
                <div class="col-md-12">
                    <label>Correo:</label>
                    <input type="text" id="correo" class="form-control" value="@Model.Cliente.Correo" />
                </div>
                <div class="col-md-12">
                    <label>Contrasena:</label>
                    <input type="password" id="contrasena" class="form-control" value="@Model.Cliente.Contrasena" />
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-primary" onclick="guardar()">Guardar</a>
            <a class="btn btn-link" data-dismiss="modal">Cerrar</a>
        </div>
    </div>
</div>